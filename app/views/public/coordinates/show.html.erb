<div class="container mt-5">
  <div class="row">
    <%= render 'public/coordinates/button' %>
    <div class="col">
      <div class="d-flex align-items-center m-3">
        <h2 class="font-weight-bold bg-light px-3 mr-3">コーディネート詳細</h2>
        <div id="bookmark_btn_<%= @coordinate.id %>" class="mr-5">
          <%= render "public/bookmarks/btn", coordinate: @coordinate %>
        </div>
        <% if @coordinate.user == current_user %>
          <%= link_to "コーディネート編集", edit_coordinate_path(@coordinate), class: "btn btn-success mr-3" %>
          <%= link_to "コーディネート削除", coordinate_path(@coordinate), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
        <% end %>
      </div>
      <div class="row m-3">
        <div class="col-6 d-flex justify-content-center">
          <%= image_tag @coordinate.get_coordinate_image(360,480) %>
        </div>
        <div class="col-5 offset-1">
          <div class="row mt-3">
            <div class="col-md-5 text-center border border-dark rounded">ニックネーム</div>
            <div class="col-md-7 text-center"><%= link_to @coordinate.user.name, coordinates_path(user_id: @coordinate.user.id) %></div>
          </div>
          <div class="row mt-3">
            <div class="col-md-5 text-center border border-dark rounded">スタイル</div>
            <div class="col-md-7 text-center"><%= link_to @coordinate.style_i18n, coordinates_path(style: @coordinate.style) %></div>
          </div>
          <div class="row">
            <div class="col-5 text-center border border-dark rounded mt-3">紹介</div>
            <div class="col-12 mt-3 border border-dark rounded" style="height: 250px">
              <p><%= @coordinate.introduction %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-4 text-center border border-dark rounded mt-3">タグ</div>
          </div>
          <div class="row mt-3">
            <% if @tags.present? %>
              <div class="d-flex flex-wrap">
                <% @tags.each do |tag| %>
                  <h5><span class="badge badge-secondary mr-2 mb-2">
                    <%= link_to "#{tag.name}(#{tag.taggings_count})", coordinates_path(tag_name: tag.name), class: "text-white" %>
                  </span></h5>
                <% end %>
              </div>
            <% else %>
              <p>タグ未登録</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
