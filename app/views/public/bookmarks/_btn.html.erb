<% if coordinate.bookmarked_by?(current_user) %>
  <%= link_to coordinate_bookmarks_path(coordinate), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart fa-2xl" style="color:red;"></i>
  <% end %>
<% else %>
  <%= link_to coordinate_bookmarks_path(coordinate), method: :post, remote: true do %>
    <i class="fa-regular fa-heart fa-2xl"></i>
  <% end %>
<% end %>