<div class="container">
  <div class="row">
    <div class="col-3 my-3">
      <h1 class="bg-light d-inline-block px-3">会員情報</h1>
    </div>
    <% if @user == current_user && !@user.guest_user? %>
      <div class="col-3 my-3">
        <%= link_to "会員情報を編集", edit_user_path(@user), class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
    <div class="col-md-9 offset-md-1 my-3">
      <table class="table table-borderd">
        <tbody>
          <tr>
            <th scope="col" class="w-25">ニックネーム</th>
            <td class="text-center"><%= @user.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td class="text-center"><%= @user.gender_i18n %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="text-center"><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-6 my-3">
      <div class="d-flex justify-content-between">
        <h3 class="bg-light px-3">投稿一覧</h3>
        <div class="d-flex align-items-center">
          <%= link_to "全ての投稿を見る>", posts_user_path(@user) %>
        </div>
      </div>
      <div class="row mt-3">
        <% @coordinates.each do |coordinate| %>
          <div class="col-4">
            <%= link_to coordinate_path(coordinate) do %>
              <%= image_tag coordinate.get_coordinate_image(170,230) %><br>
            <% end %>
            <% coordinate.tag_list.first(2).each do |tag| %>
              <span class="badge badge-secondary"><%= link_to tag, coordinates_path(tag_name: tag), class: "text-white" %></span><br>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-6 my-3">
      <div class="d-flex justify-content-between">
        <h3 class="bg-light d-inline-block px-3">ブックマーク一覧</h3>
        <div class="d-flex align-items-center">
          <%= link_to "全てのブックマークを見る>", bookmarks_user_path(@user) %>
        </div>
      </div>
      <div class="row mt-3">
        <% @bookmarks.each do |bookmark| %>
          <div class="col-4">
            <%= link_to coordinate_path(bookmark.coordinate) do %>
              <%= image_tag bookmark.coordinate.get_coordinate_image(170,230) %><br>
            <% end %>
            <%= link_to bookmark.coordinate.user.name, coordinates_path(user_id: bookmark.coordinate.user.id) %><br>
            <% bookmark.coordinate.tag_list.first(2).each do |tag| %>
              <span class="badge badge-secondary"><%= link_to tag, coordinates_path(tag_name: tag), class: "text-white" %></span><br>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
