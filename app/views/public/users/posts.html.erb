<div class="container">
  <div class="row">
    <div class="col">
      <div class="row m-3 d-flex justify-content-between">
        <h3 class="bg-light px-3 mr-auto">投稿一覧</h3>
        <%= link_to "マイコーディネートランダム", random_coordinates_path(my: "posts"), class: "btn btn-info" %>
        <div class="tabs align-items-center ml-3">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#all">全投稿</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#published">公開中</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#draft">非公開</a>
            </li>
          </ul>
        </div>
      </div>
      <% unless current_user.coordinates.present? %>
        <h1 class="m-3">投稿はまだありません</h1>
      <% else %>
        <div class="tab-content">
          <div id="all" class="tab-pane fade show active">
            <div class="row">
              <% @coordinates.each do |coordinate| %>
                <div class="col-4 col-md-2 m-3">
                  <%= link_to coordinate_path(coordinate) do %>
                    <%= image_tag coordinate.get_coordinate_image(120,160) %>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="row">
              <%= paginate @coordinates %>
            </div>
          </div>
          <div id="published" class="tab-pane fade">
            <div class="row">
              <% @published_coordinates.each do |coordinate| %>
                <div class="col-4 col-md-2 m-3">
                  <%= link_to coordinate_path(coordinate) do %>
                    <%= image_tag coordinate.get_coordinate_image(120,160) %>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="row">
              <%= paginate @published_coordinates %>
            </div>
          </div>
          <div id="draft" class="tab-pane fade">
            <div class="row">
              <% @draft_coordinates.each do |coordinate| %>
                <div class="col-4 col-md-2 m-3">
                  <%= link_to coordinate_path(coordinate) do %>
                    <%= image_tag coordinate.get_coordinate_image(120,160) %>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="row">
              <%= paginate @draft_coordinates %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
